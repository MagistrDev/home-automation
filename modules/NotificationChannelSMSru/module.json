{
	"dependencies": [],
	"singleton": false,
	"category": "notifications",
	"author": "Z-Wave.Me",
	"homepage": "https://z-wave.me",
	"icon": "icon.png",
	"moduleName":"NotificationChannelSMSru",
	"version": "2.0.0",
	"maturity": "stable",
	"repository": {
			"type": "git",
			"source": "https://github.com/Z-Wave-Me/home-automation"
	},
	"defaults": {
		"title": "__m_title__",
		"description": "__m_descr__",
		"api_key": "",
		"phone": "",
		"prefix": "__prefix__",
		"user": ""
	},
	"schema": {
		"description": "__description__",
		"type": "object",
		"properties": {
			"phone": {
				"required": true,
				"pattern": "[1-9][0-9]*"
			},
			"prefix": {
				"required": false
			},
			"api_key": {
				"required": true,
				"pattern": "[A-Fa-f0-9]{8}-[A-Fa-f0-9]{4}-[A-Fa-f0-9]{4}-[A-Fa-f0-9]{4}-[A-Fa-f0-9]{12}"
			},
			"user": {
				"field": "enum",
				"datasource": "namespaces",
				"enum": "users:id",
				"required": false
			}
		}
	},
	"options": {
		"fields": {
			"phone": {
				"label": "__l_phone__"
			},
			"prefix": {
				"label": "__l_prefix__"
			},
			"api_key": {
				"label": "__l_api_key__",
				"helper": "__h_api_key__"
			},
			"user": {
				"type": "select",
				"datasource": "namespaces",
				"optionLabels": "users:title",
				"noneLabel": "__l_not_assigned_to_user__",
				"label": "__l_assignedToUser__",
				"helper": "__h_assignedToUser__"
			}
		}
	}
}